                    <td><?php echo get_class($repository) ?></td>
                    <td>
                        <?php echo \Nette\Diagnostics\Helpers::clickableDump($query, true) ?>
                    </td>
                    <td>
                        <a href="#" class="nette-toggler" rel="#unimapper-panel-entity-<?php echo $queryIndex ?>"><?php echo $query->entityReflection->getName() ?> â–º</a>
                        <div id="unimapper-panel-entity-<?php echo $queryIndex ?>" class="nette-collapsed">
                            <?php echo \Nette\Diagnostics\Helpers::clickableDump($query->entityReflection, true) ?>
                        </div>
                    </td>
                    <td>
                        <?php echo \Nette\Diagnostics\Helpers::clickableDump($query->result, true) ?>
                    </td>
                </tr>
                <?php endif ?>
            <?php endforeach ?>
        <?php endforeach ?>
        </tbody>
    </table>
</div>